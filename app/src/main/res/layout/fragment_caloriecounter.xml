<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue">


    <TextView
        android:id="@+id/header_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="10dp"
        android:text="Calorie Counter"
        android:fontFamily="@font/open_sans_bold"
        android:textSize="24sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="  Meal Description"
                    android:textStyle="bold"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/mealDescriptionCCText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="What did you eat?" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="38dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  Calorie Amount"
                    android:textStyle="bold"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/caloriesCCText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="How many calories?" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <Button
                    android:id="@+id/submitCCButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00FFFFFF"
                    android:text="Submit"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/CCtextView"
                    android:layout_width="match_parent"
                    android:layout_height="497dp" />

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
